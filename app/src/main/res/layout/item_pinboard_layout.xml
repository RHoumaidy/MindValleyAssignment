<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/thumbImgV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/thumbImgV"
            android:background="@drawable/photo_title_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp">
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfileImgV"
                android:layout_width="50dp"
                android:layout_alignParentStart="true"
                android:layout_height="50dp"
                app:civ_border_color="#fff"
                app:civ_border_width="3dp"
                app:civ_circle_background_color="#000"
                app:civ_fill_color="#000"/>
            
            <TextView
                android:layout_toEndOf="@id/userProfileImgV"
                android:layout_marginStart="10dp"
                android:id="@+id/userNameTxtV"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"/>
            
            <TextView
                android:id="@+id/likesTxtV"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:textColor="#fff"
                android:drawableStart="@drawable/ic_favorite_red_24dp"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>